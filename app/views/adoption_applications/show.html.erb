<h2><%= @adoption_application.name %>'s application:</h2>
<p>Address: <%= @adoption_application.address %></p>
<p>City: <%= @adoption_application.city %></p>
<p>State: <%= @adoption_application.state %></p>
<p>Zip: <%= @adoption_application.zip %></p>
<p>Phone Number: <%= @adoption_application.phone_number %></p>
<p>Why: <%= @adoption_application.description %></p>
<p>Pets applied for:</p>
<ul>
  <% @pets.each do |pet| %>
    <li><%= pet.name %></li>
    <% if pet.adoptable? %>
      <%= button_to "Approve application for #{pet.name}", "/pets/#{pet.id}/adoption_applications/#{@adoption_application.id}", method: :patch %>
    <% elsif # if the PetAdoptionApplication.where(adoption_application_id = @adoption_application.id && pet_id = pet.id) has a status that is approved then show the revoke app button %>
      <%= button_to "Revoke application for #{pet.name}" *** %>
    <% else %>
      <p><%= pet.name %>'s adoption is pending.</p>
    <% end %>
  <% end %>
</ul>
