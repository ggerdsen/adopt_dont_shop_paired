
<h1><%= "Edit Review For #{@shelter.name}" %></h1>
<hr/>
<%= form_tag "/shelters/#{@shelter.id}/reviews/#{@shelter_review.id}/edit", method: :patch do %>

  <p><%= label_tag :title %>
  <%= text_field_tag :title, @shelter_review.title %></p>
  <p><%= label_tag :rating %>
  <%= number_field_tag :rating, @shelter_review.rating %></p>
  <p><%= label_tag :content %>
  <%= text_field_tag :content, @shelter_review.content%></p>
  <p><%= label_tag :picture %>
  <%= text_field_tag :picture, @shelter_review.picture %></p>
  <p><%= submit_tag "Update Review" %></p>
<% end %>
