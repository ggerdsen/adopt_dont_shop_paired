<p><%= link_to "Shelter Index", "/shelters" %>
<br>
<%= link_to "Pet Index", "/pets" %></p>
<hr/>
<h2> Submit a New Review for <%= @shelter.name %> </h2>
<hr/>
<%= form_tag "/shelters/#{@shelter.id}/reviews/new" do %>

  <p><%= label_tag :title %>
  <%= text_field_tag :title %></p>
  <p><%= label_tag :rating %>
  <%= number_field_tag :rating %></p>
  <p><%= label_tag :content %>
  <%= text_field_tag :content %></p>
  <p><%= label_tag :picture %>
  <%= text_field_tag :picture %></p>
  <p><%= submit_tag "Submit Review" %></p>
<% end %>
