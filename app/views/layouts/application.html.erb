<!DOCTYPE html>
<html>
  <head>
    <title>AdoptDontShop</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
  </head>

  <body>
    <navbar>
      <p> <%= link_to "Shelter Index", "/shelters" %>
      <%= link_to "Pet Index", "/pets" %>
      <%= link_to "Favorites - #{session[:favorites].values.sum}", "/favorites" %> </p>
    </navbar>

    <% flash.each do |type, message| %>
      <p><%= message %></p>
    <% end %>

    <%= yield %>
  </body>
</html>
