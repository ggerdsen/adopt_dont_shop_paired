<!DOCTYPE html>
<html>
  <head>
    <title>AdoptDontShop</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
  </head>

  <body>
    <navbar>
      <ul>
        <li><%= link_to "Shelter Index", "/shelters" %></li>
        <li><%= link_to "Pet Index", "/pets" %></li>
        <li><%= link_to "Favorites - #{favorite_pets.total}", "/favorites" %></li>
      </ul>
    </navbar>

    <% flash.each do |type, message| %>
      <p><%= message %></p>
    <% end %>

    <%= yield %>
  </body>
</html>
